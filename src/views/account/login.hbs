<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ingresar</title>

    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
    <link rel="stylesheet" href="css/login.css">

</head>

<body class="text-center">

    <main class="form-signin">
        <form method="POST" action="/login">

            <h1>
                <i class="bx bxs-category-alt bx-lg"></i>
            </h1>
            <h1 class="h3 mb-3 fw-normal">Nombre aplicación</h1>

            <div way-repeat="lista">
                <span way-data="name"></span>
            </div>

 
            <div class="form-floating">
                <input way-data="coso" type="text" class="form-control" id="username" name="username" autofocus="true" placeholder="Usuario">
                <label for="username">Usuario</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="password" name="password" placeholder="Clave">
                <label for="password">Clave</label>
            </div>

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Recordar clave
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Ingresar</button>

            <p>
                {{messages.error}}
            </p>

            <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
        </form>
    </main>


    <script src="/libs/way/way.js"></script>
    <script>
        way.set("lista",[
            {name: "perrito"},
            {name: "gatito"},
            {name: "pajarito"},
        ])
    </script>
</body>

</html>