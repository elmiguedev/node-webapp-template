<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Usuarios</h1>
</div>

<!-- listado de usuario -->
<div class="row">
    <div class="col">
        <table class="table table-hover table-striped">
            <thead>
                <th>ID</th>
                <th>Nombre</th>
                <th>Perfil</th>
            </thead>
            <tbody>
                {{#each usuarios}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{nombre}}</td>
                    <td>{{perfil_id}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>